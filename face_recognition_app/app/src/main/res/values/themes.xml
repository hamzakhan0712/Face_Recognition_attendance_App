<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Application theme without a base theme -->
    <style name="Theme.Face_recognition_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenmist</item>
        <item name="colorPrimaryVariant">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>

        <!-- Error color. -->
        <item name="colorError">@color/red</item>

        <!-- Default text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#A8A8A8</item>

        <!-- You can add other theme attributes here -->
    </style>

</resources>
