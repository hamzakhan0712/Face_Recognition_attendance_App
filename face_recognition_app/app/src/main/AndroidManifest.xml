<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Face_recognition_app"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Login Activity -->
        <activity
            android:name=".StudentHomeActivity"
            android:label="Home"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".TeacherHomeActivity"
            android:label="Home"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".signup_option_activity"
            android:label="Signup Options"
            android:theme="@style/Theme.Face_recognition_app" />

        <!-- Signup Activity -->
        <activity
            android:name=".VerifyStudentActivity"
            android:label="Signup for Students"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".StudentCredentialsActivity"
            android:label="Signup for Students"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".TeacherRegistrationActivity"
            android:label="Signup for Teachers"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".AddStudentActivity"
            android:label="Add New Student"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".FaceRecognitionActivity"
            android:label="Signup Options"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".SelectLecturesActivity"
            android:label="Signup Options"
            android:theme="@style/Theme.Face_recognition_app" />

        <activity
            android:name=".ViewAllStudentsActivity"
            android:label="Signup Options"
            android:theme="@style/Theme.Face_recognition_app" />

    </application>

</manifest>